<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

    <androidx.viewpager.widget.ViewPager
            android:id="@+id/pager"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"/>

    <include layout="@layout/view_divider"/>

    <com.flyco.tablayout.CommonTabLayout
            android:id="@+id/tab_layout"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            app:tl_iconHeight="23dp"
            app:tl_iconWidth="23dp"
            app:tl_iconGravity="TOP"
            app:tl_indicator_color="@color/gold_B9A88F"
            app:tl_indicator_height="0dp"
            app:tl_textSelectColor="@color/gold_B9A88F"
            app:tl_textUnselectColor="@color/gray_D3D3D3"
            android:background="@color/white_FFFFFF"
            app:tl_textsize="10dp" />

</LinearLayout>