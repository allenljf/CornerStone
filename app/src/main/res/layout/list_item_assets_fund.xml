<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:background="@color/white_FFFFFF">

    <LinearLayout android:layout_width="match_parent"
                  android:layout_height="44dp"
                  android:orientation="horizontal"
                  android:gravity="center_vertical">
        <TextView android:id="@+id/tv_title"
                  android:layout_width="0dp"
                  android:layout_height="wrap_content"
                  android:layout_weight="1"
                  android:textSize="15dp"
                  android:layout_marginLeft="15dp"
                  android:textColor="@color/black_222328"/>

        <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/btn_buy"
                android:layout_width="56dp"
                android:layout_height="28dp"
                android:text="@string/AssetsRebuy"
                android:textSize="15dp"
                android:textColor="@color/white_FFFFFF"
                android:background="@drawable/round_3dp_gold"
                android:layout_marginRight="15dp"/>
    </LinearLayout>

    <include layout="@layout/view_divider"/>

    <LinearLayout android:layout_width="match_parent"
                  android:layout_height="81dp"
                  android:orientation="horizontal"
                  android:layout_marginLeft="20dp"
                  android:layout_marginRight="20dp">
        <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center_horizontal"
                android:orientation="vertical">

            <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="17dp"
                    android:textColor="@color/gray_B4B4B4"
                    android:text="@string/AssetsFundAggregateAmount"
                    android:textSize="10dp"/>

            <TextView
                    android:id="@+id/tv_total_amount"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="6dp"
                    android:textColor="@color/black_222328"
                    android:textSize="15dp"/>
        </LinearLayout>

        <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center_horizontal"
                android:orientation="vertical">

            <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="17dp"
                    android:text="@string/HoldYield"
                    android:textColor="@color/gray_B4B4B4"
                    android:textSize="10dp"/>

            <TextView
                    android:id="@+id/tv_pnl"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="6dp"
                    android:textColor="@color/black_222328"
                    android:textSize="15dp"/>
        </LinearLayout>

        <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center_horizontal"
                android:orientation="vertical">

            <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="17dp"
                    android:text="@string/MainAnnualYield"
                    android:textColor="@color/gray_B4B4B4"
                    android:textSize="10dp"/>

            <TextView
                    android:id="@+id/tv_annual_pnl"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="6dp"
                    android:textColor="@color/black_222328"
                    android:textSize="15dp"/>
        </LinearLayout>
    </LinearLayout>

    <include layout="@layout/view_divider"/>

    <LinearLayout android:layout_width="match_parent"
                  android:layout_height="81dp"
                  android:orientation="horizontal"
                  android:layout_marginLeft="20dp"
                  android:layout_marginRight="20dp">
        <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center_horizontal"
                android:orientation="vertical">

            <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="17dp"
                    android:textColor="@color/gray_B4B4B4"
                    android:text="@string/AsstesFundInvestedCapital"
                    android:textSize="10dp"/>

            <TextView
                    android:id="@+id/tv_allot_value"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="6dp"
                    android:textColor="@color/black_222328"
                    android:textSize="15dp"/>
        </LinearLayout>

        <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center_horizontal"
                android:orientation="vertical">

            <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="17dp"
                    android:text="@string/AssetsFundSubscribeDate"
                    android:textColor="@color/gray_B4B4B4"
                    android:textSize="10dp"/>

            <TextView
                    android:id="@+id/tv_allot_date"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="6dp"
                    android:textColor="@color/black_222328"
                    android:textSize="15dp"/>
        </LinearLayout>

        <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center_horizontal"
                android:orientation="vertical">

            <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="17dp"
                    android:text="@string/AsstesFundClosePeriod"
                    android:textColor="@color/gray_B4B4B4"
                    android:textSize="10dp"/>

            <TextView
                    android:id="@+id/tv_lock_during"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="6dp"
                    android:textColor="@color/black_222328"
                    android:textSize="15dp"/>
        </LinearLayout>
    </LinearLayout>

    <include layout="@layout/view_divider_large"/>
</LinearLayout>